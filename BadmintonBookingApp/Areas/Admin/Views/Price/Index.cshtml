@using BadmintonBookingApp.Models.Facilities

@model IEnumerable<BadmintonBookingApp.Models.Managements.Price>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PriceTag)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimeFactor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateFactor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PriceTag)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeFactor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateFactor)
            </td>
            <td>
                 @Status.GetValue(item.Status,Status.priceDictionary)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a> 
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary">Details</a> 
                    @* <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a> *@
            </td>
        </tr>
}
    </tbody>
</table>

@using BadmintonBookingApp.Models.Facilities
@model BadmintonBookingApp.Models.Managements.Price

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .form-group {
        display: flex;
        flex-direction: column;
    }

    .row {
        display: flex;
        align-items: center;
        justify-content: center;
        padding-top: 15px;
    }
</style>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="PriceTag" class="control-label"></label>
                <input asp-for="PriceTag" class="form-control" />
                <span asp-validation-for="PriceTag" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimeFactor" class="control-label"></label>
                <input asp-for="TimeFactor" class="form-control" />
                <span asp-validation-for="TimeFactor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateFactor" class="control-label"></label>
                <input asp-for="DateFactor" class="form-control" />
                <span asp-validation-for="DateFactor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select style="border-radius:5px" class="form-control" asp-items="@Status.GetValue(Status.priceDictionary)" asp-for="Status"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

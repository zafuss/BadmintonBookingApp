@using BadmintonBookingApp.Models.Facilities
@model BadmintonBookingApp.Models.Managements.Price

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="PriceTag" class="control-label"></label>
                <input asp-for="PriceTag" class="form-control" />
                <span asp-validation-for="PriceTag" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimeFactor" class="control-label"></label>
                <input asp-for="TimeFactor" class="form-control" />
                <span asp-validation-for="TimeFactor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateFactor" class="control-label"></label>
                <input asp-for="DateFactor" class="form-control" />
                <span asp-validation-for="DateFactor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select class="form-control" asp-items="@Status.GetValue(Status.priceDictionary)" asp-for="Status" style="border-radius:5px"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            <div class="form-group">
                <a asp-action="Index" class="btn btn-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

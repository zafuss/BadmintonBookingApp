@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<img class="parallax-slider" src="~/images/Checkout.jpg" style="position: absolute; width:100%;height:100%">
<div class="vh-100 gradient-custom">
    <div class="container py-5 h-100 opacity-80">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <section>
                    <form id="account" method="post">

                        <div class="card" style="background-color: #19283f; color: white; border-radius: 1rem;">
                            <div class="card-body text-center">

                                <div class="mb-md-2 mt-md-2 pb-5">

                                    <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
                                    <p class="text-white-50 mb-5">Please enter your Email and Password!</p>
                                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                                    <div class="form-outline form-white mb-4", style="display:flex; flex-direction: column; align-items:center">
                                  
                                        <label asp-for="Input.Email" class="form-label" style="margin-bottom:20px !important">Email</label>
                                        <input asp-for="Input.Email" class="form-control round-input" style="width:250px" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>

                                    <div class="form-outline form-white mb-4" style="display:flex; flex-direction: column; align-items:center">
          
                                        <label asp-for="Input.Password" class="form-label">Password</label>
                                        <input asp-for="Input.Password" class="form-control round-input" autocomplete="current-password" aria-required="true"  />
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>


                                    <p class="small mb-5 pb-lg-2"><a class="Forgot" href="#!">Forgot password?</a></p>

                                    @* <input type="submit" value="Login" class="btn btn-outline-info btn-lg px-5 rounded-pill"> *@
                                    <button  id="login-submit" type="submit" class="submit-button btn rounded-pill main-btn">Log in</button>
                                    <div class="d-flex justify-content-center text-center mt-4 pt-1">
                                        <a href="#" class="icoFacebook"> <i class="fab fa-facebook-f"></i></a>
                                        <a href="#!" class="icoTwitter"> <i class="fab fa-twitter"></i></a>
                                        <a href="#!" class="icoGoogle"> <i class="fab fa-google-plus"></i></a>
                                    </div>

                                </div>

                                <div>
                    </form>
                </section>
                <p class="mb-0">
                    Don't have an account? <a class="signup" class="fw-bold btn" asp-area="Identity" asp-page="/Account/Register">Sign Up</a>
                </p>
            </div>
        </div>
    </div>
</div>
      </div>
    </div>
</div
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

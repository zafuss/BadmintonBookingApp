@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Views/Shared/_stolenLayout.cshtml";
}

<img class="parallax-slider" src="~/images/Checkout.jpg" style="position: absolute; width:100%">
<div class="vh-100 gradient-custom">
    <div class="container py-5 h-100 opacity-75 ">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
          <div class="card bg-dark text-white" style="border-radius: 1rem;">
            <div class="card-body text-center">
  
              <div class="mb-md-2 mt-md-2 pb-5">
  
                <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
                <p class="text-white-50 mb-5">Please enter your Email and Password!</p>
  
                <div class="form-outline form-white mb-4">
                  <label class="form-label" for="typeEmailX">Email</label>
                  <input type="email" id="typeEmailX"  required>
                   
                </div>
  
                <div class="form-outline form-white mb-4">
                  <label class="form-label" for="typePasswordX">Password</label>
                  <input type="password" id="typePasswordX" required minlength="8" >
                </div>
                
  
                <p class="small mb-5 pb-lg-2"><a  class="Forgot" href="#!">Forgot password?</a></p>
  
                <input type="submit" value="Login" class="btn btn-outline-info btn-lg px-5 rounded-pill">

                <div class="d-flex justify-content-center text-center mt-4 pt-1">
                  <a href="#" class="icoFacebook"> <i class="fab fa-facebook-f"></i></a>
                  <a href="#!" class="icoTwitter"> <i class="fab fa-twitter"></i></a>
                  <a href="#!" class="icoGoogle"> <i class="fab fa-google-plus"></i></a>
                </div>
  
              </div>
  
              <div>
                <p class="mb-0">Don't have an account? <a  class="signup" class="fw-bold btn" href="register.html">Sign Up</a>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
</div
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
